<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.kosa.mini.board.mapper.BoardMapper">

    <select id="list" resultType="org.kosa.mini.board.BoardVO">
        select 
        	* 
        from boards
    </select>

	<select id="read" resultType="org.kosa.mini.board.BoardVO">
		select 
			* 
		from boards 
		where bno = #{bno}
	</select>
	
	<delete id="delete" >
		delete 
		from boards 
		where bno = #{bno}
	</delete>
    
</mapper>
